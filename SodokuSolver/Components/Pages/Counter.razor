@page "/counter"
@rendermode InteractiveServer

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<div>
    <p role="status">Current increment: @currentIncrement</p>
    <p role="status">Current count: @currentCount</p>
    <InputNumber @bind-Value="currentIncrement" @onchange="SetCount" @onblur="SetCount"/>
</div>
<div>
    <hr/>
</div>
<div>
    <button class="btn btn-primary" @onclick="IncrementCount">Increment</button>
    <button class="btn btn-primary" @onclick="ResetIncrement">Clear</button>
</div>


@code {
    private double currentCount = 0;
    private int currentIncrement = 0;

    [Parameter]
    public double IncrementAmount { get; set; } = 1;

    private void SetCount()
    {
        currentCount = currentIncrement * IncrementAmount;
    }

    private void IncrementCount()
    {
        currentIncrement++;
        SetCount();
    }

    private void ResetIncrement()
    {
        currentIncrement = 0;
        currentCount = 0;
    }
}
